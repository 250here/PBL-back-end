<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--写对应的接口名-->
<mapper namespace="com.pbl.backend.dao">

    <!--String getPassword(String userId)-->
    <select id="getPassword" parameterType="int" resultType="String">
        select password from [user] where id = #{id}
    </select>

    <!--Integer updatePasswordOFUser(String id, String passwordNew);-->
    <update id="updatePasswordOFUser">
        update [user] set [user](password) values(#{1}) where id = #{0}
    </update>

    <!--Integer uploadPhoto(String id, String photoPath)-->
    <insert id="uploadPhoto">
        insert into [user] (photo_path) values (#{1}) where id = #{0}
    </insert>

    <!--void updatePhoto(String id, String photoPath);-->
    <update id="updatePhoto">
        update [user] set user(photo_path) values(#{1}) where id = #{0}
    </update>

    <!--String getPhoto(String id)-->
    <select id="getPhoto" parameterType="String" resultType="String">
        select photo_path from [user] where id = #{id}
    </select>

</mapper>